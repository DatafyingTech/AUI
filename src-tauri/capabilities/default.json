{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "enables the default permissions",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "fs:default",
    "fs:allow-read-dir",
    "fs:allow-read-file",
    "fs:allow-write-file",
    "fs:allow-exists",
    "fs:allow-mkdir",
    "fs:allow-rename",
    "fs:allow-remove",
    "fs:allow-stat",
    "fs:allow-watch",
    "fs:allow-unwatch",
    "fs:allow-read-text-file",
    "fs:allow-write-text-file",
    "fs:scope-home-recursive",
    "dialog:default",
    "dialog:allow-open",
    "dialog:allow-save",
    "shell:default",
    "shell:allow-open",
    "shell:allow-spawn",
    "shell:allow-stdin-write",
    "shell:allow-kill",
    {
      "identifier": "shell:allow-execute",
      "allow": [
        { "name": "claude", "cmd": "claude", "args": true },
        { "name": "powershell", "cmd": "powershell", "args": true },
        { "name": "cmd", "cmd": "cmd", "args": true },
        { "name": "bash", "cmd": "bash", "args": true },
        { "name": "open", "cmd": "open", "args": true }
      ]
    }
  ]
}
